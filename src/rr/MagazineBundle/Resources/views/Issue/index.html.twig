{% extends '::base.html.twig' %}
{% block title %}
  Issue List 
{% endblock %} 

{% block body -%}
    <h1>Issue list</h1>

    <table class="records_list table">
        <thead>
            <tr>
                <th>Publication</th>
                <th>Issue</th>
                <th>Cover</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.pubblication.getName }}</td>
                <td>#{{ entity.number }}  - {% if entity.datePublication %}{{ entity.datePublication|date('Y-m-d H:i:s') }}{% endif %}
                </td>
                <td>{% if entity.cover %} <img class="img-responsive" src="{{ asset(entity.getCoverWeb) }}" > {% endif %}
                </td>
                <td>    
                        <a class="btn btn-default btn-xs" href="{{ path('issue_show', { 'id': entity.id }) }}">show</a>
                   
                        <a  class="btn btn-default btn-xs" href="{{ path('issue_edit', { 'id': entity.id }) }}">edit</a>
                 
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('issue_new') }}">
                New Entry
            </a>
        </li>
    </ul>
    {% endblock %}
